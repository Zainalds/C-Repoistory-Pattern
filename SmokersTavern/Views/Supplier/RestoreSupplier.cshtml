<!--Tryvynne-->
@model SmokersTavern.Model.SupplierArchiveViewModel
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/vendor/bootstrap/css/bootstrap.min.css")
@Styles.Render("~/Content/vendor/font-awesome/css/font-awesome.min.css")
@Styles.Render("~/Content/css/sb-admin.css")

@Scripts.Render("~/Content/vendor/jquery/jquery.min.js")
@Scripts.Render("~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js")
@Scripts.Render("~/Content/js/sb-admin.min.js")
@Scripts.Render("~/Content/vendor/jquery-easing/jquery.easing.min.js")

<br />
<br />
<br />


<center><h2 class="alert-warning" style="font-family:'Comic Sans MS';">Are you sure you want to restore this supplier?</h2></center>

<div class="container">
    <div class="row">
        <div class="col-xs-5" style="border:0px solid gray">
            <!-- Datos del vendedor y titulo del producto -->
            <h6 class="title-price"><small>SUPPLIER NAME</small></h6>
            <h3 style="margin-top:0px;">@Html.DisplayFor(model => model.name)</h3>

            <!-- Precios -->
            <h6 class="title-price"><small>SUPPLIER CONTACT DETAILS</small></h6>
            <h3 style="margin-top:0px;">@Html.DisplayFor(model => model.phoneNo)</h3>

            <!-- Detalles especificos del producto -->
            <h6 class="title-price"><small>SUPPLIER EMAIL ADDRESS</small></h6>
            <h3 style="margin-top:0px;">@Html.DisplayFor(model => model.emailAddress)</h3>


            <h6 class="title-price"><small>SUPPLIER PHYSICAL ADDRESS</small></h6>
            <h3 style="margin-top:0px;">@Html.DisplayFor(model => model.physicalAddress)</h3>


            <!-- Botones de compra -->
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Restore" class="btn btn-primary" />
                </div>
            }
        </div>
    </div>
</div>        