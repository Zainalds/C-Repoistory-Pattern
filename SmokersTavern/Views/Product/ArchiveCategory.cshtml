<div class="modal fade in" id="signup" tabindex="-1" role="dialog" aria-labelledby="MyModalLabel2" aria-hidden="false" style="display:block;">
    <div class="modal-dialog" style="margin-top: 100px;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="submit" class="close" data-dismiss="modal" aria-hidden="true" onclick="window.location.href='/Product/AllCategories'">×</button>
                <center><h2 class="alert-success" style="font-family:'Comic Sans MS';">Archive Category</h2></center>
            </div>
            @using (Html.BeginForm("ArchiveCategory", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
                <div class="modal-body" id="product_details">


                    <span>Product Name</span>
                    @Html.TextBoxFor(model => model.CategoryName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CategoryName)
                    <br />

                    <div class="modal-footer">
                        <input type="submit" value="Submit" class="btn btn-success " />
                    </div>
                </div>
            }

        </div>
    </div>
</div>