@model IEnumerable<SmokersTavern.Data.Models.SupplierArchive>
@{

    ViewBag.Title = "Supplier Archive";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/vendor/bootstrap/css/bootstrap.min.css")
@Styles.Render("~/Content/vendor/font-awesome/css/font-awesome.min.css")
@Styles.Render("~/Content/css/sb-admin.css")

@Scripts.Render("~/Content/vendor/jquery/jquery.min.js")
@Scripts.Render("~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js")
@Scripts.Render("~/Content/js/sb-admin.min.js")
@Scripts.Render("~/Content/vendor/jquery-easing/jquery.easing.min.js")


<div id="right-panel" class="right-panel">
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">
                                Supplier Archive
                            </strong>
                        </div>
                        <div class="card-body">
                            <table class="table table-hover">
                                <tr class="success">
                                    <th>
                                        Supplier Name
                                    </th>
                                    <th>
                                        Supplier Contact Number
                                    </th>
                                    <th>
                                        Supplier Email
                                    </th>
                                    <th>Supplier Address</th>
                                    <th>Contact Person</th>
                                    <th>Payment Terms</th>
                                    <th>Restore</th>
                                </tr>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SupplierName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SupplierContactNumeber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SupplierEmail)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SupplierAddress)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SupplierContactPerson)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PaymentTerms)
                                    </td>
                                    <td>
                                        @Html.ActionLink(" ", "Restore", new { id = item.Id, ClientId = item.ClientId }, new { title = "Restore " + item.SupplierName + "'s Record", @class = "btn btn-default fa fa-refresh fa-lg" })
                                    </td>
                                </tr>
                                }

                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>